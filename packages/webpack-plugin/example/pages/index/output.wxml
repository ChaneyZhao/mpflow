<template name="./index.wxml">
  <!--index.wxml-->
  <template is="./a.wxml" />

  <view class="container">
    <view class="userinfo">
      <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
      <block wx:else>
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </block>
    </view>
    <view class="usermotto">
      <text class="user-motto">{{motto}}</text>
    </view>
    <form catchsubmit="formSubmit" bindautofill="onAutofill">
      <input placeholder="姓名" name="name" auto-fill="base_info.name" />
      <input placeholder="手机号" name="phone" auto-fill="phone_info.phone" type="number" />
      <input placeholder="身份证号" name="idcard" auto-fill="base_info.id_card_num" type="idcard" bindinput="onInput" bindchange="onChange" bindblur="onBlur" />
      <!-- <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
          <view class="picker">
          当前选择：{{array[index]}}
          </view>
      </picker> -->
      <button type="primary" form-type="submit">submit</button>
    </form>
  </view>
</template>

</template name="./a.wxml">
  <template is="b.wxml" />

  <wxs module="foo">
  var some_msg = "hello world";
  module.exports = {
    msg : some_msg,
  }
  </wxs>
  <view>
    <template is="item" />
    <input type="password" />
    <!-- <image src="./image.png" /> -->
    {{foo.msg}}
  </view>
</template>

<template name="./b.wxml">
  <template name="item">
    <text>{{text}}</text>
  </template>
</template>
