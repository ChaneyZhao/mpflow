{
  "compilerOptions": {
    "outDir": "lib",
    "sourceMap": false,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": ["esnext"],
    "types": ["node", "jest"]
  },
  "include": ["./typings"],
  "exclude": ["node_modules", "lib"]
}
